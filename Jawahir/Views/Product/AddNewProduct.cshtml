@model Jawahir.ViewModels.NewProductViewModel


<div class="new_product_view">

	<form id="add_new_product" method="post" asp-controller="Product" asp-action="AddNewProduct">

		<div class="col-12">
			<label asp-for="Product.ProductName" class="form-label">Product Name</label>
			<input asp-for="Product.ProductName" class="form-control" />
		</div>

		<div class="col-12">
			<label asp-for="Product.ProductDescription" class="form-label">Description</label>
			<input asp-for="Product.ProductDescription" class="form-control" />
		</div>

		@Html.DropDownListFor(m =>	m.SelectedCategoryId, Model.Categories, "Select one")

		<input type="submit" value="Submit" class="submit" />
	</form>

</div>
