<!DOCTYPE html>
<html lang="en">
<head>
    <title>Welcome to Jawahir</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--BootStrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />

    <!--My Files-->
     <link href="~/css/MainStyle.css" rel="stylesheet" />
    
</head>
<body>
    <div class="row col-12">
        <div class="nav-container container container-fluid">
        <nav class="navbar navbar-expand-lg ">
            <b><a class="navbar-brand" asp-controller="Home" asp-action="Index">MyJawahir</a></b>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse my-auto" id="main_nav">
                    <ul class="navbar-nav ms-auto flex-grow  w-100">

                        <li class="nav-item search-item flex-grow mw p-100">
                        @await Component.InvokeAsync("SearchBar")
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Shop Now</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Market" asp-action="Index">My Market</a>
                    <partial name="_LoginPartial" />
                        </li>
                        <li class="nav-item">
                            @await Component.InvokeAsync("Cart")
                        </li>
                </ul>
            </div>
            
        </nav>
        </div>
        <div class="sub-container">
            <span>Test123</span>"
        </div>
        <div class="main_container col-10 offset-1">
            <div class="body_container " >

                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                        @RenderSection("Scripts", required: false)
                    </main>
                </div>
            </div>
    </div>
    </div>



</body>
</html>